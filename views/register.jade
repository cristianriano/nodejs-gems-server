extend layout

block content
  .container
    form.form-signup
      h2.form-signup-heading Please fill up the form
      label.sr-only(for="inputName") Name
      input#inputName.form-control(type="text", placeholder="Name", required="true", autofocus="true")
      label.sr-only(for="inputEmail") Email address
      input#inputEmail.form-control(type="email", placeholder="Email address", required="true")
      label.sr-only(for="inputPassword") Password
      input#inputPassword.form-control(type="password", placeholder="Password", required="true")
      label.sr-only(for="inputRepeatPassword") Repeat Password
      input#inputRepeatPassword.form-control(type="password", placeholder="Repeat Password", required="true")
      button.btn.btn-lg.btn-primary.btn-block(type="submit") Sign up
        
