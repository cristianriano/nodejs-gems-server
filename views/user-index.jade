extend layout  

block style
  link(rel="stylesheet", href="/stylesheets/user-index.css")
  link(rel="stylesheet", href="/stylesheets/style.css")

block content
  .container.list-group(ng-controller="StoreController as store")
    .row
      .col-md-6.col-md-offset-3
        div.list-group-item(ng-repeat="product in products")
          h3 {{product.name}}
            em.pull-right {{product.price | currency}}
          product-gallery
          product-tabs
        
  
block scripts
  script(type="text/javascript" src="/javascript/angular.min.js")
  script(type="text/javascript" src="/javascript/app.js")
  script(type="text/javascript" src="/javascript/products.js")
  
